<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Palantir Demo App</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        <script>
            let GET_MESSAGES_URL = false;
        </script>
    </head>
    <body>
        <header id="main_header">
            <div class="inner">
                <div id="branding"><a href="/">Palantir</a></div>
                <nav id="main_nav">
                    {% if is_granted('ROLE_CHAT_PARTICIPANT') %}
                        <a href="{{ path('app_logout') }}">Logout</a>
                    {% else %}
                        <a href="{{ path('create_chatroom') }}">Create a room</a>
                    {% endif %}
                </nav>
            </div>
        </header>

        <div id="content_wrapper">{% block body %}{% endblock %}</div>
    </body>

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</html>
